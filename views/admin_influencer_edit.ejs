<section class="space-y-8">
  <div class="rounded-lg bg-white p-6 shadow">
    <a href="/admin/influencers" class="text-xs font-semibold uppercase text-gray-500">&larr; Voltar</a>
    <h1 class="mt-2 text-2xl font-semibold text-rstgray"><%= influencer.name %></h1>
    <p class="text-sm text-gray-600"><%= influencer.email %></p>
  </div>

  <div class="rounded-lg bg-white p-6 shadow">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold text-rstgray">Códigos de desconto</h2>
    </div>
    <div class="mt-4 space-y-4">
      <form class="flex flex-col gap-4 sm:flex-row" action="/admin/influencers/<%= influencer.id %>/codes" method="POST">
        <input
          type="text"
          name="prestashop_code"
          placeholder="Código Prestashop"
          class="w-full rounded border-gray-300 uppercase tracking-wide focus:border-rstred focus:ring-rstred"
          required
        />
        <button type="submit" class="rounded bg-rstred px-4 py-2 text-sm font-semibold uppercase text-white">Adicionar</button>
      </form>
      <div class="overflow-x-auto">
        <table class="min-w-full text-left text-sm">
          <thead class="text-xs uppercase text-gray-500">
            <tr>
              <th class="px-4 py-2">Código</th>
              <th class="px-4 py-2 text-right">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% influencer.discountCodes.forEach((code) => { %>
              <tr class="border-t">
                <td class="px-4 py-2 font-semibold"><%= code.prestashop_code %></td>
                <td class="px-4 py-2 text-right">
                  <form method="POST" action="/admin/influencers/<%= influencer.id %>/codes/<%= code.id %>/delete">
                    <button type="submit" class="text-xs font-semibold text-red-500 underline">Remover</button>
                  </form>
                </td>
              </tr>
            <% }) %>
            <% if (!influencer.discountCodes.length) { %>
              <tr>
                <td colspan="2" class="px-4 py-6 text-center text-sm text-gray-500">Nenhum código atribuído.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
