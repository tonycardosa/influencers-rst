<section class="space-y-8">
  <div class="rounded-lg bg-white p-6 shadow">
    <h1 class="text-2xl font-semibold text-rstgray">Regras de comissão</h1>
    <p class="text-sm text-gray-500">Configure percentagens por marca ou regra default (marca "Default").</p>
  </div>

  <div class="rounded-lg bg-white p-6 shadow">
    <h2 class="mb-4 text-xl font-semibold text-rstgray">Nova / Atualizar regra</h2>
    <form method="POST" action="/admin/rules" class="grid gap-6 md:grid-cols-2">
      <div>
        <label class="mb-2 block text-sm font-medium text-gray-700" for="user_id">Influencer</label>
        <select required id="user_id" name="user_id" class="w-full rounded border-gray-300 focus:border-rstred focus:ring-rstred">
          <option value="">Selecione</option>
          <% influencers.forEach((inf) => { %>
            <option value="<%= inf.id %>"><%= inf.name %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="mb-2 block text-sm font-medium text-gray-700" for="brand_id">Marca</label>
        <select id="brand_id" name="brand_id" class="w-full rounded border-gray-300 focus:border-rstred focus:ring-rstred">
          <option value="">Default</option>
          <% brands.forEach((brand) => { %>
            <option value="<%= brand.id %>"><%= brand.name %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="mb-2 block text-sm font-medium text-gray-700" for="commission_first">% 1ª compra</label>
        <input required type="number" min="0" step="0.01" id="commission_first" name="commission_first" class="w-full rounded border-gray-300 focus:border-rstred focus:ring-rstred" />
      </div>
      <div>
        <label class="mb-2 block text-sm font-medium text-gray-700" for="commission_subsequent">% seguintes</label>
        <input required type="number" min="0" step="0.01" id="commission_subsequent" name="commission_subsequent" class="w-full rounded border-gray-300 focus:border-rstred focus:ring-rstred" />
      </div>
      <div class="md:col-span-2">
        <button type="submit" class="rounded bg-rstred px-4 py-2 text-sm font-semibold uppercase text-white">Guardar</button>
      </div>
    </form>
  </div>

  <div class="rounded-lg bg-white p-6 shadow">
    <h2 class="mb-4 text-xl font-semibold text-rstgray">Regras existentes</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full text-left text-sm">
        <thead class="text-xs uppercase text-gray-500">
          <tr>
            <th class="px-4 py-2">Influencer</th>
            <th class="px-4 py-2">Marca</th>
            <th class="px-4 py-2">% 1ª compra</th>
            <th class="px-4 py-2">% seguintes</th>
            <th class="px-4 py-2 text-right">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% rules.forEach((rule) => { %>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium"><%= rule.influencer_name %></td>
              <td class="px-4 py-2"><%= rule.brand_name || 'Default' %></td>
              <td class="px-4 py-2"><%= rule.commission_first %>%</td>
              <td class="px-4 py-2"><%= rule.commission_subsequent %>%</td>
              <td class="px-4 py-2 text-right">
                <form method="POST" action="/admin/rules/<%= rule.id %>/delete">
                  <button type="submit" class="text-xs font-semibold text-red-500 underline">Remover</button>
                </form>
              </td>
            </tr>
          <% }) %>
          <% if (!rules.length) { %>
            <tr>
              <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">Sem regras definidas.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
