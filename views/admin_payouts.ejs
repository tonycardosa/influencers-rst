<section class="space-y-8">
  <div class="flex flex-col justify-between gap-4 rounded-lg bg-white p-6 shadow md:flex-row md:items-center">
    <div>
      <h1 class="text-2xl font-semibold text-rstgray">Pagamentos pendentes</h1>
      <p class="text-sm text-gray-500">Selecione as comissões que pretende marcar como pagas.</p>
    </div>
    <form method="POST" action="/admin/payouts/mark-paid" id="markPaidForm">
      <input type="hidden" name="dummy" value="1" />
    </form>
  </div>
  <div class="rounded-lg bg-white p-6 shadow">
    <form method="POST" action="/admin/payouts/mark-paid">
      <div class="overflow-x-auto">
        <table class="min-w-full text-left text-sm">
          <thead class="text-xs uppercase text-gray-500">
            <tr>
              <th class="px-4 py-2">
                <input type="checkbox" onclick="document.querySelectorAll('.commission-checkbox').forEach(cb => cb.checked = this.checked);" />
              </th>
              <th class="px-4 py-2">Afiliado</th>
              <th class="px-4 py-2">Encomenda</th>
              <th class="px-4 py-2">Total</th>
              <th class="px-4 py-2">Comissão</th>
              <th class="px-4 py-2">Data</th>
            </tr>
          </thead>
          <tbody>
            <% payouts.forEach((item) => { %>
              <tr class="border-t">
                <td class="px-4 py-2">
                  <input type="checkbox" class="commission-checkbox" name="commission_ids" value="<%= item.id %>" />
                </td>
                <td class="px-4 py-2 font-medium"><%= item.influencer_name %></td>
                <td class="px-4 py-2">#<%= item.prestashop_order_id %></td>
                <td class="px-4 py-2">€ <%= Number(item.order_total_with_vat).toFixed(2) %></td>
                <td class="px-4 py-2 font-semibold text-rstred">€ <%= Number(item.commission_earned).toFixed(2) %></td>
                <td class="px-4 py-2 text-gray-500"><%= new Date(item.order_created_at).toLocaleDateString() %></td>
              </tr>
            <% }) %>
            <% if (!payouts.length) { %>
              <tr>
                <td colspan="6" class="px-4 py-6 text-center text-sm text-gray-500">Sem comissões pendentes.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="mt-6">
        <button type="submit" class="rounded bg-rstred px-4 py-2 text-sm font-semibold uppercase text-white">Marcar como pagas</button>
      </div>
    </form>
  </div>
</section>
